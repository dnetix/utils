{
  "name": "dnetix/utils",
  "description": "A different set of utilities to make easier working in PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "autoload": {
    "psr-4": {
      "Dnetix\\": "src/Dnetix/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "facebook/php-sdk-v4": "5.1.*",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "suggest": {
    "facebook/php-sdk-v4": "To use the Social Facebook Handler"
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs"
  }
}
